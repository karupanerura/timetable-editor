{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "rootDir": "./src",
    "outDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src@types/*"
      ]
    }
  },
  "exclude": ["node_modules", "docs"]
}
